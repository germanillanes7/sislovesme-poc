---
interface Props {
	img?: string;
	videoName?: string;
	actress?: string;
}

const {
	img = "https://images.psmcdn.net/design/tour/slm/tour/pics/roxie_sinner/bio_big.jpg",
	videoName,
	actress,
} = Astro.props;
---

<div class="card">
	<div class="container-image">
		<img src={img} alt="img" />
	</div>
	<div class="container">
		<span>{videoName}</span>
		<p>
			{actress}
		</p>
	</div>
</div>

<style>
	.card {
		height: 100%;
		width: 100%;
		position: relative;
		background-color: #1f1f1f;
	}
	.container-image {
		position: relative;
	}
	.container-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	/* Add some padding inside the card container */
	.container {
		position: relative;
		background-color: #1f1f1f;
		max-height: 50px;
		padding: 10px;
	}

	.container span {
		color: #fff;
	}

	.container p {
		color: #fbf664;
	}
</style>
