---
import CardNewest from "../components/CardNewest.astro";
import Footer from "../components/Footer.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="SisLovesMe - Official SisLovesMe.com Porn Site">
	<img
		class="slide-fake"
		src="https://images.psmcdn.net/tsv4/heros/slm_mothers24_2500x500.jpg"
	/>
	<div class="newest">
		<div class="newest-videos-title">
			<h2>NEWEST MOVIES</h2>
			<h2>VIEW ALL</h2>
		</div>
		<div class="newest-videos-container">
			<CardNewest img="https://images.psmcdn.net/design/tour/slm/tour/pics/angel_gostosa2/bio_big.jpg" videoName="Making Her Vibrate" actress="Angel Gostosa"/>

			<CardNewest
				img="https://images.psmcdn.net/design/tour/slm/tour/pics/aria_sloane_and_athena_heart/bio_big.jpg"
				videoName="Cruel Intentions"
				actress="Athena Heart and Aria Sloane"
			/>
			<CardNewest videoName="The Life of a Sinner" actress="Roxie Sinner"/>
		</div>
	</div>

	<div class="most-popular">
		<div class="newest-videos-title">
			<h2>NEWEST MOVIES</h2>
			<h2>VIEW ALL</h2>
		</div>
		<div class="most-popular-videos-container">
			<CardNewest
				img="https://images.psmcdn.net/design/tour/slm/tour/pics/athena_faris/bio_big.jpg"
				videoName="Stepsisters Growing Pains"
				actress="Athena Faris"
			/>

			<CardNewest
				img="https://images.psmcdn.net/design/tour/slm/tour/pics/charity_crawford/bio_big.jpg"
				videoName="Brothers Break Up Plan"
				actress="Charity Crawford"
			/>
			<CardNewest
				img="https://images.psmcdn.net/design/tour/slm/tour/pics/daisy_stone/bio_big.jpg"
				videoName="Beyond Brother And Sister"
				actress="Daisy Stone"
			/>
			<CardNewest
				img="https://images.psmcdn.net/design/tour/slm/tour/pics/karlee_grey/bio_big.jpg"
				videoName="Sisterly Advice"
				actress="Karlee Grey"
			/>

			<CardNewest
				img="https://images.psmcdn.net/design/tour/slm/tour/pics/aidra_fox/bio_big.jpg"
				videoName="My Stepsisters Inner Slut"
				actress="Aidra Fox"
			/>
			<CardNewest
				img="https://images.psmcdn.net/design/tour/slm/tour/pics/zoe_bloom/bio_big.jpg"
				videoName="Dance Party In My Pants Party"
				actress="Zoey Bloom"
			/>
		</div>
	</div>

	<div class="button-load-more-videos">
		<div >
			<p>
				Load more Videos!
			</p>
		</div>
	</div>

	<div class="footer">
		<Footer />
	</div>
</Layout>

<style>
	.slide-fake {
		width: 100%;
		max-width: 100%;
	}

	.newest {
		padding: 0 15px;
	}

	.newest-videos-container {
		display: grid;
		grid-column-gap: 20px;
		margin-bottom: 60px;
		grid-template-columns: repeat(auto-fill, minmax(30%, 1fr));
	}

	.newest-videos-title {
		width: 100%;
		display: flex;
		justify-content: space-between;
	}

	.newest-videos-title h2 {
		color: #fff;
		font-size: 1em;
	}

	.most-popular {
		padding: 0 15px;
	}

	.most-popular-videos-container {
		display: grid;
		grid-column-gap: 20px;
		margin-bottom: 60px;
		grid-template-columns: repeat(auto-fill, minmax(30%, 1fr));
		grid-row-gap: 20px;
	}

	.most-popular-videos-title {
		width: 100%;
		display: flex;
		justify-content: space-between;
	}

	.most-popular-videos-title h2 {
		color: #fff;
		font-size: 1em;
	}


	.button-load-more-videos {
		background-color: #be0028;
		padding: 10px;
		width: 90%;
		min-width: 250px;
		display: block;
		margin: 20px auto;
		max-width: 800px;
		font-size: 2em;
		line-height: 1.2em;
		text-align: center;
		cursor: pointer;

	}

	.button-load-more-videos p {
        color: #6dfe0a;
		margin: 0;
	}

	.footer {
		background-color: #ae002d;
		padding: 40px 0px;
		margin-top: 40px;
	}
</style>
